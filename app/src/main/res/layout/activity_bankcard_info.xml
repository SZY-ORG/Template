<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<include layout="@layout/common_title" />
	
	<RelativeLayout android:id="@+id/empty_view"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:layout_margin="@dimen/horizontal_margin"
		android:background="@color/gray">
		<TextView android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawableLeft="@drawable/ic_launcher_background"
			android:drawablePadding="@dimen/horizontal_margin"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/horizontal_margin"
			android:text="添加银行卡"
			android:textSize="@dimen/font_22" />
	
	</RelativeLayout>
	
	<RelativeLayout android:id="@+id/bank_view"
		android:layout_width="match_parent"
		android:layout_height="120dp"
		android:layout_margin="@dimen/horizontal_margin"
		android:background="@color/gray">
		<TextView android:id="@+id/bank"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:drawablePadding="@dimen/horizontal_margin"
			android:paddingLeft="@dimen/horizontal_margin"
			android:paddingTop="@dimen/vertical_margin"
			android:text="银行卡"
			android:textSize="@dimen/font_22" />
		<TextView android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/bank"
			android:drawablePadding="@dimen/horizontal_margin"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/horizontal_margin"
			android:text="3021142343132142354"
			android:textSize="@dimen/font_22" />
	</RelativeLayout>

</LinearLayout>