<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<include android:id="@+id/title_view"
		layout="@layout/common_title" />
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="150dp"
		android:background="@color/white"
		android:orientation="vertical">
		<TextView style="@style/Text.F16.Black"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="30dp"
			android:text="余额" />
		<TextView style="@style/Text.F16.Black"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:paddingTop="10dp"
			android:text="9999.00" />
	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:orientation="horizontal">
		
		<Button android:id="@+id/business_list"
			android:layout_width="0dp"
			android:layout_height="90dp"
			android:layout_marginLeft="@dimen/horizontal_margin"
			android:layout_weight="1"
			android:background="@color/white"
			android:text="@string/business_list"/>
		
		<Button android:id="@+id/withdraw"
			android:layout_width="0dp"
			android:layout_height="90dp"
			android:layout_marginLeft="@dimen/horizontal_margin"
			android:layout_weight="1"
			android:background="@color/white"
			android:text="@string/withdraw_money"/>
		
		<Button android:id="@+id/bankcard"
			android:layout_width="0dp"
			android:layout_height="90dp"
			android:layout_marginLeft="@dimen/horizontal_margin"
			android:layout_marginRight="@dimen/horizontal_margin"
			android:layout_weight="1"
			android:background="@color/white"
			android:text="@string/bankcard" />
	</LinearLayout>

</LinearLayout>