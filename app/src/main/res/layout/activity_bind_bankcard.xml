<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<include layout="@layout/common_title" />
	
	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/horizontal_margin"
				android:text="该银行卡将用于接收你的运费，为保证您能顺利收到，请务必填写正确。" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="58dp"
				android:paddingLeft="@dimen/vertical_margin"
				android:paddingRight="@dimen/vertical_margin">
				<TextView android:id="@+id/label_holder"
					style="@style/Text.F16.Black"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="持卡人姓名" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:src="@drawable/arrow_right" />
				<TextView style="@style/Text.F16.Black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@id/label_holder"
					android:gravity="center"
					android:text="王某某"
				/>
			</RelativeLayout>
			<View android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginLeft="@dimen/horizontal_margin"
				android:background="@color/gray" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="58dp"
				android:paddingLeft="@dimen/vertical_margin"
				android:paddingRight="@dimen/vertical_margin">
				<TextView android:id="@+id/label_bank"
					style="@style/Text.F16.Black"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/opening_bank" />
				<ImageView android:id="@+id/phone_arrow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:src="@drawable/arrow_right" />
				<TextView style="@style/Text.F16.Black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@id/label_bank"
					android:gravity="center"
					android:text="王某某"
				/>
			</RelativeLayout>
			<View android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginLeft="@dimen/horizontal_margin"
				android:background="@color/gray" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="58dp"
				android:paddingLeft="@dimen/vertical_margin"
				android:paddingRight="@dimen/vertical_margin">
				<TextView android:id="@+id/label_bank_number"
					style="@style/Text.F16.Black"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/bank_card_number" />
				<TextView style="@style/Text.F16.Black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@id/label_bank_number"
					android:gravity="center"
					android:text="王某某"
				/>
			</RelativeLayout>
			<View android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginLeft="@dimen/horizontal_margin"
				android:background="@color/gray" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="58dp"
				android:paddingLeft="@dimen/vertical_margin"
				android:paddingRight="@dimen/vertical_margin">
				<TextView android:id="@+id/label_bank_city"
					style="@style/Text.F16.Black"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:text="@string/bank_card_opening_city" />
				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:src="@drawable/arrow_right" />
				<TextView style="@style/Text.F16.Black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toRightOf="@id/label_bank_city"
					android:gravity="center"
					android:text="王某某"
				/>
			</RelativeLayout>
			<View android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginLeft="@dimen/horizontal_margin"
				android:background="@color/gray" />
			
			<Button android:id="@+id/save"
				style="@style/Text.F16.White"
				android:layout_width="120dp"
				android:layout_height="50dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="@dimen/vertical_margin"
				android:background="@color/blue"
				android:text="@string/save" />
		
		
		</LinearLayout>
	
	</ScrollView>

</LinearLayout>