<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	
	<include layout="@layout/common_title" />
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/horizontal_margin"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingBottom="@dimen/horizontal_margin"
		android:paddingLeft="@dimen/horizontal_margin"
		android:paddingTop="@dimen/horizontal_margin">
		<TextView style="@style/Text.F16.Black"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:text="+2000.00"
			android:textSize="@dimen/font_36"
		/>
		<View style="@style/Divider.Horizontal"
			android:layout_marginBottom="@dimen/horizontal_margin"
			android:layout_marginTop="@dimen/horizontal_margin"
		/>
		
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/horizontal_margin"
			android:orientation="horizontal"
			android:paddingRight="@dimen/horizontal_margin"
		>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="标题"
			/>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="内容内容内容内容内容内容"
			/>
		
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:paddingRight="@dimen/horizontal_margin"
		>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="标题"
			/>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="内容内容内容内容内容内容"
			/>
		
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:paddingRight="@dimen/horizontal_margin"
		>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="标题"
			/>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="内容内容内容内容内容内容"
			/>
		
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:orientation="horizontal"
			android:paddingRight="@dimen/horizontal_margin"
		>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="标题"
			/>
			<TextView style="@style/Text.F16.Black"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="内容内容内容内容内容内容"
			/>
		
		</LinearLayout>
		
		<TextView android:id="@+id/have_question"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="20dp"
			android:layout_marginTop="20dp"
			android:text="对本交易有疑问?"
			android:textColor="@color/blue" />
	</LinearLayout>


</LinearLayout>