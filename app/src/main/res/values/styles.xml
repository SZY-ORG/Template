<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DebugButton" parent="Text.F16">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:onClick">onClick</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/font_16</item>
		<item name="android:background">@drawable/btn_debug</item>
	</style>

	<style name="Divider">
		<item name="android:background">@color/gray</item>
	</style>

	<style name="Divider.Horizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0.5dp</item>
	</style>

	<style name="LinkText" parent="Text.F15">
		<item name="android:textColor">#4285F4</item>
	</style>

	<style name="EditText">
		<item name="android:textAppearance">@style/Text.F18.Black</item>
		<item name="android:textColorHint">@color/hint</item>
	</style>

	<style name="SingleRoundedBtn" parent="Text.F18.White">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/btn_single_rounded</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="PerfectInfoItemLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">55dp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="PerfectInfoItemLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="PerfectInfoItemContent">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@null</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="PerfectInfoItemPhoto">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">100dp</item>
		<item name="android:background">#FFFF00</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

</resources>